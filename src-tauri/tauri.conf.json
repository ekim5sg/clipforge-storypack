{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "clipforge-storypack",
  "version": "0.1.0",
  "identifier": "com.msgivens.clipforge_storypack",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ClipForge Storypack",
        "width": 1000,
        "height": 700,
        "resizable": true,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}